@import "../../template/player/player.wxss";
.container-relative {
  position: relative;
}
.container-absolute {
  position: absolute;
  top: 0; left: 0; bottom: 0; right: 0;
}
.absolute-center-comment {
  position: absolute;
  width: 100vw;
  height: 30vh;
  top: 30vh; 
  left: 0; 
  right: 0;
  bottom: 0; 
}

.commentbt{
  height: 40rpx;
  width:40rpx;
  float: right;

}

/*评论list*/
.commentlist{
  display:flex;
  flex-direction:column;
  justify-content: flex-start;
  align-items: flex-start;
  background: #eeeeee;
}
.commentlist text{
  display: inline-block;
  /*height: 40rpx;*/
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #b0acac;
  font-size: 26rpx;
}

/*zanlist*/
.zanlist{
  display:flex;
  flex-direction:row;
  flex-wrap:  wrap;
 
  /*background: red;*/
}
.zanlist image{
  height:30rpx;
  width:30rpx;
}
.zanlist text{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #576b95;
  font-size: 26rpx;
}


.container{
  display: inline-block;
  padding: 0;
  font-size: 16px;
  color: #000;
  width:100vw;
  
}
.container .feed-item{
  /*width: 100%;*/
  padding: 15rpx;
  margin: 0rpx 0rpx 2rpx 0rpx;
  background: #ffffff;
  border-top: 0px solid #eee;
  border-bottom: 1px solid gray;
  box-shadow: 0 0px 0px gray;
}
.container .feed-item .feed-source{
  /*width: 100%;*/
  left: 0;
  /*height: 100rpx;*/
}
.container .feed-item .feed-source .avatar{
  position: relative;
  display: inline-block;
}
.container .feed-item .feed-source a{
  display: inline-block;
  height: 40rpx;
}
.container .feed-item .feed-source .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .feed-item .feed-source text{
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #576b95;
  font-size: 26rpx;
}
.container .feed-item .feed-source .item-more{
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}
.container .feed-item .feed-content{
  padding: 30rpx 10rpx 0 0;
}
.container .feed-item .feed-content .question text{
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}
.container .feed-item .feed-content .answer-body{
  padding: 20rpx 10rpx 0 0;
  margin: 10rpx;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}

/*//首页正在使用*/
.container .feed-item .feed-content .answer-body image{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 0rpx;
  top: 20rpx;
  vertical-align: middle;
  padding: 10rpx;
}
.container .feed-item .feed-content .answer-actions{
  width: 98%;
  padding: 10rpx 0rpx  0;
  color: #a0acac;
}
.container .feed-item .feed-content .answer-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}
.container .feed-item .feed-content .answer-actions .dot ::after{
  content: "•";
}





  <view style="margin:30rpx;">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="flex-wrp-row" style="justify-content:  flex-start;margin:10rpx;">
       <view style="width:100rpx">内容:</view>
        <view style="flex-grow: 1;">
          <textarea name="content" class="inputs flex-wrp" style="flex-wrap:wrap;height:200rpx;word-break:break-all;" placeholder-style="color:gray;font-size:12px;padding:0px 0px 0px 5px;"
                 placeholder=" 输入文字"  />
          <View style="height: 1px;background-color: gray;"></View>
        </view>
      </view>
    
      <view class="flex-wrp-row" style="justify-content:  flex-start; margin:10rpx;">
        <text style="">选择图片:</text>
        <image bindtap="chooseImage" src="{{tempFilePaths[0]}}"
               style="width: 80rpx; height: 80rpx;padding:10px; background-image:url( ../../image/imageN.png);"  />
      </view>

     <view class="images-wrapper" hidden="true">>
          <text class="images-text">请选择图片</text>
          <view class="images-list">
            <block wx:for="{{imageList}}" wx:for-item="image">
              <image src="{{image}}" class="images-image" data-src="{{image}}" bindtap="previewImage"></image>
            </block>
            <view class="images-image image-plus" bindtap="chooseImage2">
              <view class="image-plus-horizontal"></view>
              <view class="image-plus-vertical"></view>
            </view>
          </view>
        </view>

      <view class="btn-area">
        <button formType="submit" type="primary">提交</button>
      </view>
    </form>
  </view>
